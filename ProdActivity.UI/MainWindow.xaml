<Window
    x:Class="ProdActivity.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProdActivity.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:ProdActivity.UI.Views"
    xmlns:vm="clr-namespace:ProdActivity.UI.ViewModels"
    Title="MainWindow"
    Width="1200"
    Height="800"
    AllowsTransparency="True"
    Background="Transparent"
    MouseDown="OnMouseDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border
        Background="{StaticResource MainBackgroundBrush}"
        BorderBrush="{StaticResource BackgroundBrush}"
        BorderThickness="0.7"
        CornerRadius="5">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Rectangle
                Grid.Row="0"
                Height="28"
                Fill="{StaticResource BackgroundBrush}" />

            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontWeight="Medium"
                Foreground="{StaticResource ForegroundBrush}"
                Text="Activity Scheduler" />

            <StackPanel
                Grid.Row="0"
                Margin="10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <Button
                    Padding="5,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding MinimizeCommand}"
                    Content="-"
                    FontSize="16" />

                <Button
                    Padding="5,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding MaximizeRestoreCommand}"
                    Content="[ ]"
                    FontSize="12" />

                <Button
                    Padding="5,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding CloseCommand}"
                    Content="x"
                    FontSize="14" />
            </StackPanel>

            <ContentControl
                Grid.Row="1"
                VerticalAlignment="Center"
                Content="{Binding CurrentViewModel}" />

        </Grid>

    </Border>

</Window>
